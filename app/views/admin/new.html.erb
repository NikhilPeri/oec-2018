<% @page_title = "Admin" %>
<div class="main-wrapper">
  <h1 align="center">Configure Admin</h1>
  <%= form_for(:admin, :html => {class: "form-horizontal" },:url => {:controller => 'admin', :action => 'create'}) do |f| %>
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Email:</label>
      <div class="col-sm-10">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="password">Password:</label>
      <div class="col-sm-10">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="password">Confirm Password:</label>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>
    <div class="cta-wrapper">
        <%= f.submit :Configure, class: 'btn btn-default'%>
    </div>
    <% if @admin.errors.any? %>
      <ul class="form_errors">
      <% for message_error in @admin.errors.full_messages %>
        <li> <%= message_error %></li>
      <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
