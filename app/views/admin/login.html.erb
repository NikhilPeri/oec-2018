<% @page_title = "Admin" %>
<div class="form">
  <h1>Admin Login</h1>
  <%= form_for(:admin, :url => {:controller => 'admin', :action => 'authenticate'}) do |f| %>
    <p> Email:</br> <%= f.text_field :email%> </p>
    <p> Password:</br> <%= f.password_field :password%></p>
    <%= f.submit :Login %>
  <% end %>
  <% if @errors.present? %>
    <ul class="form_errors">
    <% for message_error in @errors %>
      <li> <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>
